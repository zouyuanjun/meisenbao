<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        style="@style/titlebar"
        app:title="商家详情" />

    <ImageView
        android:id="@+id/im_shop_card"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="就开始发送旅客发生分裂"
        android:textColor="@color/font333"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_shop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="养车店"
        android:textColor="@color/font999"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text=""
            android:layout_marginRight="16dp"
            android:textColor="@color/font333"
            android:textSize="14sp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/icon_merchant_navigation_blue" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font333"
            android:text=""
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>

        <ImageView
            android:layout_marginRight="16dp"
            android:layout_width="25dp"
            android:background="@drawable/icon_merchant_phone_blue"
            android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font333"
            android:text=""
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:maxLines="7"
            android:ellipsize="end"
            android:layout_marginRight="32dp"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/ll_pay"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/contact_bg"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="买单"
            android:textColor="#4f9dff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>