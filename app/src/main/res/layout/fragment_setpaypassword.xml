<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/login_edittext_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="设置6位支付密码"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/font333" />
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="重新设置"
            android:id="@+id/tv_clean"
            android:textColor="@color/font06a" />

    </LinearLayout>


    <com.zou.fastlibrary.widget.VerificationCodeView
        android:id="@+id/vcd_paypassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:vcv_et_cursor="@drawable/et_cursor"
        app:vcv_et_inputType="number"
        app:vcv_et_number="6"
        app:vcv_et_bg="@color/textbg"
        app:vcv_et_text_color="@android:color/black"
        app:vcv_et_text_size="12sp"
        app:vcv_et_width="40dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font06a"
        android:layout_margin="6dp"
        android:layout_gravity="center_horizontal"
        android:text="再次输入以确认"/>
    <Button
        android:visibility="gone"
        android:id="@+id/bt_next"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:foreground="@null"
        android:enabled="false"
        android:background="@drawable/selector_button_next"/>
</LinearLayout>
