<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        style="@style/titlebar"
        app:title="开票" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invoice_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="你选取了1条单据开具发票"
                android:textColor="@color/font666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_invoice_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:text="开票金额："
                android:textColor="@color/font333"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="发票抬头"
                android:textColor="@color/font333"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <LinearLayout
                android:id="@+id/ll_invoice_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_corners_12"
                android:orientation="vertical"
                android:visibility="gone">

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="开具类型"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp">

                </com.zou.fastlibrary.widget.SettingBar>

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="发票抬头"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp"></com.zou.fastlibrary.widget.SettingBar>

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_sort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="发票类型"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp">

                </com.zou.fastlibrary.widget.SettingBar>

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="税务登记证号"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp">

                </com.zou.fastlibrary.widget.SettingBar>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_invoice"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/icon_add_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="添加发票抬头"
                    android:textColor="@color/font06a"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="收件地址"
                android:textColor="@color/font333"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_corners_12"
                android:orientation="vertical"
                android:visibility="gone">

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="收件人"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp">

                </com.zou.fastlibrary.widget.SettingBar>

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_phonenum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="手机号码"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp"></com.zou.fastlibrary.widget.SettingBar>

                <com.zou.fastlibrary.widget.SettingBar
                    android:id="@+id/sb_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    app:bar_leftColor="@color/font666"
                    app:bar_leftSize="14sp"
                    app:bar_leftText="收件地址"
                    app:bar_lineVisible="false"
                    app:bar_rightColor="@color/font333"
                    app:bar_rightSize="14sp">

                </com.zou.fastlibrary.widget.SettingBar>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/icon_add_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="添加收件地址"
                    android:textColor="@color/font06a"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_addremark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="添加备注"
                android:textColor="@color/font06a"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/ll_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:text="备注"
                    android:textColor="@color/font333"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tv_updataremark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="32dp"
                    android:gravity="center"
                    android:text="修改备注"
                    android:textColor="@color/font06a" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/shape_corners_12"
                android:lineSpacingExtra="2dp"
                android:maxLines="7"
                android:padding="16dp"
                android:text=""
                android:textColor="@color/font333"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_confirm"
                style="@style/ButtonStyle"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:text="确定" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>